<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="hospitalPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.mustapha.digitalhospitaljee.model.Patient</class>
        <class>org.mustapha.digitalhospitaljee.model.Doctor</class>

        <class>org.mustapha.digitalhospitaljee.model.Person</class>
        <class>org.mustapha.digitalhospitaljee.model.Admin</class>
        <class>org.mustapha.digitalhospitaljee.model.Consultation</class>
        <class>org.mustapha.digitalhospitaljee.model.Department</class>
        <class>org.mustapha.digitalhospitaljee.model.Room</class>
        <!--        we will add objects here later-->

        <properties>
<!--            connection with database info-->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://mysql:3306/hospital-sys"/>
            <property name="jakarta.persistence.jdbc.user" value="user"/>
            <property name="jakarta.persistence.jdbc.password" value="usr"/>


            <!--            mention the name of the database + database username and password-->

<!--            hibernate settings-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
